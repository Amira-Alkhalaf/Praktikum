<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="swp_impl_acr.quizapy.OptionsActivity">

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Optionen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionsInSequenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Anzahl Fragen in einer Sequenz"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp" />

    <EditText
        android:id="@+id/editQuestionsInSequenceText"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"
        android:text="10"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintLeft_toRightOf="@+id/questionsInSequenceText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Häufigkeit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/questionsInSequenceText" />

    <TextView
        android:id="@+id/mode1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modus 1: Wählen und Halten"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/mode2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Modus 2:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/mode1Text" />

    <TextView
        android:id="@+id/mode3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Modus3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/mode2Text" />

    <TextView
        android:id="@+id/mode4Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Modus4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/mode3Text" />

    <TextView
        android:id="@+id/mode5Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Modus 5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/mode4Text" />

    <EditText
        android:id="@+id/editMode1"
        android:layout_width="55dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintLeft_toRightOf="@+id/mode1Text"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/editQuestionsInSequenceText" />

    <EditText
        android:id="@+id/editMode2"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_marginLeft="192dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintLeft_toRightOf="@+id/mode2Text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editMode1" />

    <EditText
        android:id="@+id/editMode3"
        android:layout_width="53dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editMode2"
        app:layout_constraintLeft_toRightOf="@+id/mode3Text"
        android:layout_marginLeft="199dp" />

    <EditText
        android:id="@+id/editMode4"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintTop_toBottomOf="@+id/editMode3"
        app:layout_constraintLeft_toRightOf="@+id/mode4Text"
        android:layout_marginLeft="199dp" />

    <EditText
        android:id="@+id/editMode5"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintLeft_toRightOf="@+id/mode5Text"
        app:layout_constraintTop_toBottomOf="@+id/editMode4" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
